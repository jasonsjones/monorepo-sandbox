{
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "scripts": {
        "dev": "lerna run dev --stream",
        "dev:server": "lerna run dev --stream --scope @orion/api",
        "dev:client": "lerna run dev --stream --scope @orion/app",
        "kill:server": "lerna run kill:node --stream --scope @orion/api",
        "lint": "lerna run lint",
        "test": "lerna run test",
        "test:api": "lerna run test --stream --scope @orion/api",
        "test:app": "lerna run test --stream --scope @orion/app"
    },
    "devDependencies": {
        "lerna": "^3.13.2"
    },
    "name": "monorepo-sandbox"
}
