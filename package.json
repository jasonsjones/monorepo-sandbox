{
    "private": true,
    "name": "monorepo-sandbox",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "clean": "lerna clean",
        "dev": "lerna run dev --stream",
        "dev:api": "lerna run dev --stream --scope @orion/api-mongo",
        "dev:app": "lerna run dev --stream --scope @orion/app-nextjs",
        "build": "lerna run build --stream",
        "lint": "lerna run lint --stream",
        "postinstall": "yarn bootstrap",
        "start:mailhog": "[ ! \"$(docker ps -q -f name=mailhog)\" ] && docker start mailhog || exit 0",
        "stop:mailhog": "[ \"$(docker ps -q -f name=mailhog)\" ] && docker stop mailhog || exit 0",
        "test": "lerna run test --stream",
        "test:api": "lerna run test --stream --scope @orion/api-mongo",
        "test:app": "lerna run test --stream --scope @orion/app-nextjs",
        "test:e2e": "lerna run test:e2e --stream",
        "test:cypress": "lerna run cypress --stream --scope @orion/app-nextjs"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "yarn lint",
            "git add"
        ]
    },
    "devDependencies": {
        "husky": "^3.0.0",
        "lerna": "^3.13.2",
        "lint-staged": "^9.0.2"
    }
}
